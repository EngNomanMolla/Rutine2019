<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:background="#00aaff"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout

        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logoboard"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <Spinner
           android:background="#0077b3"
           android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:id="@+id/spennereId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></HorizontalScrollView>
    <LinearLayout
        android:orientation="vertical"
       android:gravity="center"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/allId"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="View All Subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
         android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:id="@+id/textViewId4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="30dp"
                    android:id="@+id/textViewId1"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="32dp"
                    android:background="#0077b3"
                    android:layout_width="1dp"
                    android:layout_height="130dp"></View>
                <TextView


                    android:layout_margin="30dp"
                    android:id="@+id/textViewId2"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                android:layout_height="wrap_content" />
                <View
                    android:layout_marginTop="32dp"
                    android:background="#0077b3"
                    android:layout_width="1dp"
                    android:layout_height="130dp"></View>
                <TextView


                    android:layout_margin="30dp"
                    android:id="@+id/textViewId3"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </HorizontalScrollView>




    </LinearLayout>

</LinearLayout>